@startuml "Deployment-Process-Overview"
skinparam backgroundColor white
skinparam titleFontSize 18
skinparam titleFontStyle bold
skinparam arrowColor black
skinparam stateBackgroundColor #E0F7FA
skinparam stateBorderColor #006064

title AI-agent-Ntier Deployment Process

state "Příprava\nRepositáře" as prep #BBDEFB
state "GitHub Actions\nCI/CD" as ci_cd #BBDEFB
state "Manuální\nNasazení" as manual #BBDEFB
state "Verifikace\nNasazení" as verify #BBDEFB

[*] --> prep
prep --> ci_cd
ci_cd --> manual
manual --> verify
verify --> [*]

state prep {
  [*] --> "Úprava skriptů\npro LangGraph CLI v0.2.10"
  "Úprava skriptů\npro LangGraph CLI v0.2.10" --> "Vytvoření dokumentace\npro manuální nasazení"
  "Vytvoření dokumentace\npro manuální nasazení" --> "Aktualizace\nzávislostí"
  "Aktualizace\nzávislostí" --> [*]
}

state ci_cd {
  [*] --> "Build projektu"
  "Build projektu" --> "Vytvoření\nartefaktu"
  "Vytvoření\nartefaktu" --> [*]
}

state manual {
  [*] --> "Stažení artefaktu\nz GitHub"
  "Stažení artefaktu\nz GitHub" --> "Rozbalení artefaktu"
  "Rozbalení artefaktu" --> "Nahrání na\nLangGraph Platform"
  "Nahrání na\nLangGraph Platform" --> "Nastavení\nenvironment proměnných"
  "Nastavení\nenvironment proměnných" --> [*]
}

state verify {
  [*] --> "Test API endpointu"
  "Test API endpointu" --> "Kontrola logů"
  "Kontrola logů" --> "Testování\nfunkcionality"
  "Testování\nfunkcionality" --> [*]
}

note right of prep : "17.05.2025 - Řešení problémů s CLI"
note right of ci_cd : "18.05.2025 - Oprava závislostí"
note right of manual : "18.05.2025 - Manuální nasazení"
note right of verify : "Finální ověření funkčnosti"
@enduml
